<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.Home">

    <ImageButton
        android:id="@+id/home_SignOutButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="24dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_button_ripple"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_logout_24"
        app:layout_constraintBottom_toBottomOf="@+id/home_secondLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnSecondary" />

    <ImageButton
        android:id="@+id/home_AboutButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="18dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_button_ripple"
        android:scaleType="fitCenter"
        android:src="@drawable/baseline_info_outline_24"
        app:layout_constraintBottom_toBottomOf="@+id/home_secondLabel"
        app:layout_constraintEnd_toStartOf="@+id/home_SignOutButton"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/colorOnSecondary" />

    <TextView
        android:id="@+id/home_greetings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:includeFontPadding="false"
        android:text="Hi, name"
        android:textColor="?attr/colorPrimary"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_secondLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/check_today_s_deals"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/home_greetings"
        app:layout_constraintTop_toBottomOf="@+id/home_greetings" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:clipChildren="true"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="100dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_secondLabel"
        tools:itemCount="10"
        tools:listitem="@layout/item_card_layout" />

    <TextView
        android:id="@+id/home_NoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There is No Data"
        android:textColor="?attr/colorPrimary"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>